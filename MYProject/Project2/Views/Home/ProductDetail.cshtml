@model Project2.Models.tProduct

@{
    ViewData["Title"] = "ProductDetail";
}


<div class="container mt-5"style="margin-bottom:100px;">
    <div class="row">
        <div class="col-md-4">
            <img src="~/img/@Html.DisplayFor(model => model.fImg)" class="card-img-top img-fluid mx-auto" style="max-width: 500px;">
        </div>
        <div class="col-md-8">
            <dl class="row" style="padding-left:200px;white-space:nowrap;">
                <dd class="col-sm-12" style="font-size:30px;margin-bottom:60px;">
                    @Html.DisplayFor(model => model.fName)
                </dd>
                <dd class="col-sm-2">
                    @Html.DisplayNameFor(model => model.fDescription)
                </dd>
                <dd class="col-sm-10">
                    <pre>@Html.Raw(Model.fDescription)</pre>
                </dd>
                <dt class="col-sm-2" style="margin-top:60px;">
                    @Html.DisplayNameFor(model => model.fPrice)
                </dt>
                <dd class="col-sm-10" style="margin-top:60px;">
                    @Html.DisplayFor(model => model.fPrice)
                </dd>
            </dl>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <dl class="row" style="padding-left:200px;white-space:nowrap;">
                <dd class="col-sm-2">
                    @Html.DisplayNameFor(model => model.fDetail)
                </dd>
                <dd class="col-sm-10">
                    <pre>@Html.DisplayFor(model => model.fDetail)</pre>
                </dd>
            </dl>
        </div>
    </div>
</div>

<div class="row mt-3">
    <div class="col text-center">
        <a asp-action="Index">回上一頁</a>
    </div>
</div>