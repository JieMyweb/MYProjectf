@model Project2.Models.tMember

@{
    ViewData["Title"] = "會員登入";
}

<div class="container">
    <div class="row">
        <div class="col-md-6 mx-auto mt-5">
            <div class="card">
                <div class="card-header">
                    <h1 class="text-center">會員登入</h1>
                </div>
                <div class="card-body">
                    <form asp-action="Login">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="mb-3">
                            <label asp-for="fUserId" class="form-label">帳號</label>
                            <input asp-for="fUserId" class="form-control" />
                            <span asp-validation-for="fUserId" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="fPwd" class="form-label">密碼</label>
                            <input asp-for="fPwd" type="password" class="form-control" />
                            <span asp-validation-for="fPwd" class="text-danger"></span>
                        </div>
                        <div class="mb-3 text-center">
                            <button type="submit" class="btn btn-secondary">會員登入</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col text-center">
            <a asp-action="Index">回上一頁</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
